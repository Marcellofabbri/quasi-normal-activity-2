<div id="newStoryForm">
  <%= form_with url: stories_path, html: { multipart: true } do |f| %>
    <%= f.label :title, class: "titleLabel" %>
    <%= f.text_field :title, id: "name", class: "titleField" %>
    <br/>
    <%= f.label :body, class: "bodyLabel" %>
    <%= f.text_area :body, id: "body", class: "bodyField", rows: "8", cols: "45" %>
    <br/>
    <div class="timeSelection">
      <%= f.label :month, class: "labelMonth" %>
      <%= f.select(:month, @months, class: "curtain")%>
      <%= f.label :year, class: "labelYear" %>
      <%= f.select(:year, @years, class: "curtain")%>
    </div>
    <br/>
    <div class="categorySelection">
      <%= f.label :category, class: "labelCategory" %>
      <%= f.collection_select :category_id, Category.order(:name),:id,:name, :prompt => " -- Select -- ", include_blank: false %>
    </div>

    <div class="createStoryButton">
      <%= f.submit "Save", id: "saveButton" %>
    </p>

  <% end %>
</div>